<GridPane alignment="center" hgap="10" prefHeight="196.0" prefWidth="323.0" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.PhoneBookController">
